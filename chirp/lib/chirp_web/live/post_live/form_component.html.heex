<div>
  <h2><%= @title %></h2>
  <script src="https://kit.fontawesome.com/d07169d6d4.js" crossorigin="anonymous"></script>
  
  <.form
    let={f}
    for={@changeset}
    id="post-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
    
    <%= label f, :body %>
    <%= textarea f, :body %>
    <%= error_tag f, :body %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
